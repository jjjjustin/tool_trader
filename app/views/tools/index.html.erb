<% @tools.each do |tool| %>
  <ul class="list-group">
    <h2><%= tool.tool_model.upcase %></h2>
      <li class="list-group-item">
        <ul class="list-group">
          <li class="list-group-item"><span class="badge"><%= tool.tool_type %></span>Type</li>
        </ul>
      <li class="list-group-item">
        <ul class="list-group">
          <li class="list-group-item"><span class="badge"><%= tool.tool_model %></span>Model</li>
        </ul>
      </li>
      <li class="list-group-item">
         <ul class="list-group">
          <li class="list-group-item"><span class="badge"><%= tool.condition %></span>Condition</li>
        </ul>
      </li>
      <li class="list-group-item">
        <ul class="list-group">
          <li class="list-group-item"><span class="badge"><%= tool.point_cost %> points</span>Price</li>
        </ul>
      </li>
      <li class="list-group-item">
        <ul class="list-group">
          <li class="list-group-item"><span class="badge"><%= "Yes" if tool.availability == true %></span>Available?</li>
        </ul>
      </li>
      <div class="btn-group btn-group-justified" role="group" aria-label="...">
    <div class="btn-group" role="group">
      <button type="button" class="btn btn-default">Reserve</button>
    </div>
    <div class="btn-group" role="group">
      <button type="button" class="btn btn-default">Watch</button>
    </div>
    <div class="btn-group" role="group">
      <button type="button" class="btn btn-default">Report</button>
    </div>
</div>
  </ul>
<% end %>
<%= paginate @tools %>
<%= page_entries_info @tools %>

<p>
  Download tables as:
  <%= link_to "CSV", user_tools_path(format: "csv") %> |
  <%= link_to "HTML", user_tools_path %> |
  <%= link_to "PDF", user_tools_path(format: "pdf") %>
</p>
